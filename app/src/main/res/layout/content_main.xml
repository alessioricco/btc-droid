<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="it.alessioricco.btc.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Symbols Selector -->
        <include layout="@layout/list_of_symbols_main"/>

        <!-- textual info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".40">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        style="@style/BTCMainPriceFont"
                        android:text="@string/mock_price_high"
                        android:gravity="bottom|end" />

                </LinearLayout>

                <!-- first row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- AVG -->
                    <LinearLayout
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:visibility="invisible"
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_avg" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/avg"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price"
                            />
                    </LinearLayout>

                    <!-- HI -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_hi" />
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/high"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price_high" />
                    </LinearLayout>

                    <!-- ASK -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_ask" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/ask"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!-- second row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!-- VOL -->
                    <LinearLayout
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">

                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_vol"
                            />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/volume"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price"
                            />
                    </LinearLayout>


                    <!-- LO -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_lo" />
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/low"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price" />
                    </LinearLayout>

                    <!-- BID -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_bid"
                            />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/bid"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_fragment_container"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <fragment android:name="it.alessioricco.btc.fragments.Chart"
            android:id="@+id/chart_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_chart" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/chart_progress"
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:indeterminate="true"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <!-- graphic info -->

        <TextView
            android:id="@+id/latest_trade"
            style="@style/LatestTrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:gravity="center_horizontal"
            />
        <!-- Currency Selector -->
        <include layout="@layout/list_of_currencies_main"/>

    </LinearLayout>



</RelativeLayout>
