<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="it.alessioricco.btc.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <!-- Currency Selector -->
    <HorizontalScrollView

        android:paddingBottom="@dimen/activity_vertical_margin"

        android:id="@+id/hsv_symbols"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/symbols"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- list of market symbols -->
        </LinearLayout>

    </HorizontalScrollView>

        <!-- textual info -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- textual info left panel-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginRight="@dimen/horizontal_margin">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BTCMainPriceFont"
                        android:text="@string/mock_price_high"
                        android:gravity="right|center_vertical"
                        android:freezesText="false" />

                    <!-- volume -->
                    <TableLayout
                        android:stretchColumns="1"
                        android:shrinkColumns="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TableRow android:layout_weight="0.50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".50"
                                style="@style/BidPriceLabel"
                                android:text="VOL:"
                                android:id="@+id/textView2" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/volume"
                                android:layout_width="wrap_content"
                                android:layout_weight=".50"
                                style="@style/BidPriceValue"
                                android:text="@string/mock_price"
                                android:gravity="right" />
                        </TableRow>

                        <TableRow android:layout_weight="0.50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".50"
                                style="@style/BidPriceLabel"
                                android:text="XYZ:" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/xyz"
                                android:layout_width="wrap_content"
                                android:layout_weight=".50"
                                style="@style/BidPriceValue"
                                android:text="@string/mock_price"
                                android:gravity="right" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

                <!-- textual info right panel-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".40">
                    <!-- hi, low, bid, ask-->

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                            <TextView
                                style="@style/BidPriceLabelBox"
                                android:layout_toRightOf="@+id/ask"
                                android:text="ASK:" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/ask"
                                style="@style/BidPriceValueBox"
                                android:text="@string/mock_price_high"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                            <TextView
                                style="@style/BidPriceLabelBox"
                                android:layout_toRightOf="@+id/bid"
                                android:text="BID:"
                                android:id="@+id/textView3" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/bid"
                                style="@style/BidPriceValueBox"
                                android:text="@string/mock_price" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                            <TextView
                                android:layout_toRightOf="@+id/high"
                                style="@style/BidPriceLabelBox"
                                android:text="HI:" />
                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/high"
                                style="@style/BidPriceValueBox"
                                android:text="@string/mock_price_high" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                            <TextView
                                android:layout_toRightOf="@+id/low"
                                style="@style/BidPriceLabelBox"
                                android:text="LO:" />
                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/low"
                                style="@style/BidPriceValueBox"
                                android:text="@string/mock_price" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- graphic info -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>

    <!-- Currency Selector -->
    <HorizontalScrollView

        android:paddingBottom="@dimen/activity_vertical_margin"

        android:id="@+id/hsv_currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/currencies"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- list of currencies -->

        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>
