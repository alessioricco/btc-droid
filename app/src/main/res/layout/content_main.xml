<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="it.alessioricco.btc.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Symbols Selector -->
        <include layout="@layout/list_of_symbols_main"/>

        <!-- textual info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/latest_trade"
                    style="@style/LatestTrade"
                    android:text="time"
                    />
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BTCMainPriceFont"
                    android:text="@string/mock_price_high"
                    android:gravity="end|center_vertical"
                    android:freezesText="false" />
                </RelativeLayout>

                <!-- first row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- VOL -->
                    <LinearLayout
                            android:layout_weight="0.33"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom">

                            <TextView
                                style="@style/BidPriceLabelBox"
                                android:text="@string/main_vol"
                                 />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/volume"
                                style="@style/BidPriceValueBox"
                                android:text="@string/mock_price"
                                 />
                        </LinearLayout>

                    <!-- HI -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_hi" />
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/high"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price_high" />
                    </LinearLayout>

                    <!-- ASK -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_ask" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/ask"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!-- second row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!-- AVG -->
                    <LinearLayout
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_avg" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/avg"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price"
                             />
                    </LinearLayout>

                    <!-- LO -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_lo" />
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/low"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price" />
                    </LinearLayout>

                    <!-- BID -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33">
                        <TextView
                            style="@style/BidPriceLabelBox"
                            android:text="@string/main_bid"
                            />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/bid"
                            style="@style/BidPriceValueBox"
                            android:text="@string/mock_price" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!-- graphic info -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Currency Selector -->
        <include layout="@layout/list_of_currencies_main"/>

    </LinearLayout>



</RelativeLayout>
